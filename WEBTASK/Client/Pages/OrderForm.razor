    </header>
     <!-- header End -->

  

       <!-- Menu section start -->


        <!-- Menu section end -->

      






        <!-- Order section start  -->

        <section class="order" id="order">
         <h3 class="sub-heading">Order Now</h3>
         <h1 class="heading">Free and Fast</h1>

         
        <div>
            <EditForm Model="@obj" OnValidSubmit="HandleOnSubmit" class="form">

                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="inputBox">
                    <div class="input">
                        <span>ID</span>
                        <InputNumber @bind-Value="obj.id"/>
                    </div>

                    <div class="input">
                        <span>Your Name</span>
                        <InputText @bind-Value="obj.name" placeholder="Enter Your Name" />
                    </div>
                </div>


                <div class="inputBox">
                    <div class="input">
                        <span>Your Phone#</span>
                        <InputNumber @bind-Value="obj.phone" placeholder="Enter Your ph#" />
                    </div>
                    <div class="input">
                        <span>Your Order</span>

                        <InputText @bind-Value="obj.order" placeholder="Your Order" />

                    </div>
                </div>

                <div class="inputBox">
                    <div class="input">
                        <span>Address</span>
                        <InputTextArea @bind-Value="obj.address" placeholder="Any extra Order?" />

                    </div>


                    <div class="input">
                        <span>Additional</span>

                        <InputText @bind-Value="obj.additional" placeholder="Any extra Order?" />

                    </div>
                   
                </div>
                <input type="submit" value="Order Now"  class="btn">


            </EditForm>
        </div>
         

         <br><br><br>

        </section>

        <!-- Order section end  -->


        <!-- Footer section Start  -->

        <div>
  
</div>

        <!-- Footer section end  -->

</body>
</html>




